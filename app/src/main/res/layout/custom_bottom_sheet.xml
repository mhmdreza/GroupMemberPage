<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/text_view_group_remove_from_group"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_add_member"
        android:drawablePadding="32dp"
        android:drawableStart="@drawable/ic_add_member"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/remove_from_group"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/text_view_change_user_access"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:drawableLeft="@drawable/ic_add_member"
        android:drawablePadding="32dp"
        android:drawableStart="@drawable/ic_add_member"
        android:focusable="true"
        android:gravity="center_vertical"
        android:text="@string/change_user_access"
        android:textSize="16sp" />

</LinearLayout>